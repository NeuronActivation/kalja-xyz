{
  "fmt": {
    "useTabs": true,
    "lineWidth": 100,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "include": [
      "src/"
    ]
  },
  "tasks": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "unstable": ["fmt-component"],
  "lint": {
    "exclude": ["scripts"]
  }
}
