{
  "imports": {
    "@std/fs": "https://deno.land/std@0.224.0/fs/mod.ts",
    "@std/path": "https://deno.land/std@0.224.0/path/mod.ts",
    "happy-dom": "https://esm.sh/happy-dom@12.10.3"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 100,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "include": [
      "src/",
      "scripts/"
    ]
  },
  "tasks": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "unstable": ["fmt-component"],
  "lint": {
    "exclude": ["scripts"],
    "test:coverage": "vitest --coverage",
    "update-coverage": "deno run --allow-read --allow-write --allow-env scripts/update-coverage.ts"
  },
  "unstable": ["fmt-component"]
}
